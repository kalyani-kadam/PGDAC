package com.product;

import com.product.*;

public class LinkedList {

	private Node head;

	public LinkedList() {
		super();
		this.head = null;
	}
	
	public boolean insertData(Product p) {
		Node newNode = new Node(p);
		if(p == null) {
			return false;
		}
		if(head == null) {
			head = newNode;
			return true;
		}
		
		Node temp = head;
		temp.setnext(newNode);
		System.out.println("Data inserted successfully!!");
		return true;
	}
	
	public void displayData() {
		System.out.println("while before");
		Node temp = head;
		while(temp != null) {
			System.out.println("in while ");
			System.out.println(temp.getData());
			temp = temp.getnext();
			if(temp != null) {
				System.out.print("->");
			}
		}
	}

}
